<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/feedback_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/title_feedback"/>

    <!--feedback fields-->
    <TextView
        android:id="@+id/feedback_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_feedback"/>

    <EditText
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"/>

    <EditText
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/input_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your message here!"/>

    <!--Send feedback button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link_feedback"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_donate"/>
    <!--PayPal Link-->
    <Button
        android:id="@+id/link_paypal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link_paypal"
        />

</LinearLayout>